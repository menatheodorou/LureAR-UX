<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/btnsUpload"
        android:layout_weight="1"
        android:padding="@dimen/common_padding_small2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_padding_large"
                    android:text="@string/add_geo_fence"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="@dimen/common_padding_medium1"
                    android:layout_marginTop="@dimen/common_padding_small2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_padding_small"
                    android:background="@android:color/darker_gray">
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_large"
                    android:layout_marginRight="@dimen/common_padding_large"
                    android:layout_marginTop="@dimen/common_padding_medium1"
                    android:layout_marginBottom="@dimen/common_padding_medium"
                    android:text="@string/add_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_large"
                    android:layout_marginRight="@dimen/common_padding_large"
                    android:padding="@dimen/common_padding_medium"
                    android:hint="@string/home_geo_fence"
                    android:background="@drawable/text_round"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_padding_large"
                    android:layout_marginRight="@dimen/common_padding_large"
                    android:layout_marginTop="@dimen/common_padding_medium1"
                    android:text="@string/select_radius"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/common_padding_medium"
                    android:layout_marginLeft="@dimen/common_padding_large"
                    android:layout_marginRight="@dimen/common_padding_large">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/font_medium2"
                            android:text="@string/metres_min"
                            android:layout_marginTop="@dimen/common_padding_medium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_medium2"
                            android:text="@string/metres"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top">
                        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                            android:id="@+id/seekBar"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/common_padding_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:dsb_indicatorColor="@color/colorAccent"
                            app:dsb_indicatorFormatter="@string/indicator_format_distance"
                            app:dsb_progressColor="@color/colorAccent"
                            app:dsb_rippleColor="@android:color/holo_green_light"
                            app:dsb_mirrorForRtl="false"
                            app:dsb_trackColor="@android:color/darker_gray"
                            app:dsb_min="50"
                            app:dsb_max="500" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:textSize="@dimen/font_medium2"
                            android:text="@string/metres_max"
                            android:layout_marginTop="@dimen/common_padding_medium"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metres"
                            android:textSize="@dimen/font_medium2"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/common_padding_small1"
            android:layout_marginBottom="@dimen/common_padding_small1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/save"
                android:id="@+id/btSave"
                android:textColor="@color/colorRed"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>